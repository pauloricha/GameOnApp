<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="10sp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_jogos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="Oitavas de Final"/>

        <!--<View
            android:layout_width="30sp"
            android:layout_height="2sp"
            android:layout_marginTop="1sp"
            android:layout_below="@+id/txt_jogos"
            android:background="@color/colorAccent"/>-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rounds_of_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_below="@+id/top_round">

        <RelativeLayout
            android:id="@+id/match_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/subtitle_match_1"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:text=""
                    android:layout_weight="0.4"
                    android:textColor="@color/colorAccent"
                    android:paddingTop="7sp"
                    android:paddingBottom="2sp"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <TextView
                    android:text="I"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryLight"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="2sp"
                    android:gravity="center"/>

                <TextView
                    android:text="V"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryLight"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="2sp"
                    android:gravity="center"/>

                <TextView
                    android:text="PR"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryLight"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="2sp"
                    android:gravity="center"/>

            </TableRow>

            <TableRow
                android:id="@+id/data_player_1_match_1"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_below="@+id/subtitle_match_1"
                android:background="@color/colorGrey"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/id_player_1_match_1"
                    android:text="Juventus"
                    android:layout_weight="0.4"
                    android:textColor="@color/colorPrimary"
                    android:paddingTop="7sp"
                    android:paddingBottom="7sp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/score_first_player_1_match_1"
                    android:text="2"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="7sp"
                    android:background="@color/colorGreyLight"
                    android:gravity="center"/>

                <View
                    android:layout_width="2sp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrey"/>

                <TextView
                    android:id="@+id/score_second_player_1_match_1"
                    android:text="2"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="7sp"
                    android:background="@color/colorGreyLight"
                    android:gravity="center"/>

                <View
                    android:layout_width="2sp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrey"/>

                <TextView
                    android:id="@+id/score_extra_player_1_match_1"
                    android:text="-"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="7sp"
                    android:background="@color/colorGreyLight"
                    android:gravity="center"/>

            </TableRow>

            <TableRow
                android:id="@+id/data_player_2_match_1"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginTop="5sp"
                android:layout_below="@+id/data_player_1_match_1"
                android:background="@color/colorGrey"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/id_player_2_match_1"
                    android:text="Tottenham"
                    android:layout_weight="0.4"
                    android:textColor="@color/colorPrimary"
                    android:paddingTop="7sp"
                    android:paddingBottom="7sp"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/score_first_player_2_match_1"
                    android:text="2"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="7sp"
                    android:background="@color/colorGreyLight"
                    android:gravity="center"/>

                <View
                    android:layout_width="2sp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrey"/>

                <TextView
                    android:id="@+id/score_second_player_2_match_1"
                    android:text="1"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="7sp"
                    android:background="@color/colorGreyLight"
                    android:gravity="center"/>

                <View
                    android:layout_width="2sp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrey"/>

                <TextView
                    android:id="@+id/score_extra_player_2_match_1"
                    android:text="-"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="7sp"
                    android:background="@color/colorGreyLight"
                    android:gravity="center"/>

            </TableRow>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/match_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/match_1"
            android:layout_marginTop="5sp">

            <TableRow
                android:id="@+id/subtitle_match_2"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:text=""
                    android:layout_weight="0.4"
                    android:textColor="@color/colorGrey2"
                    android:paddingTop="7sp"
                    android:paddingBottom="2sp"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <TextView
                    android:text="I"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryLight"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="2sp"
                    android:gravity="center"/>

                <TextView
                    android:text="V"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryLight"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="2sp"
                    android:gravity="center"/>

                <TextView
                    android:text="PR"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryLight"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="2sp"
                    android:gravity="center"/>

            </TableRow>

            <TableRow
                android:id="@+id/data_player_1_match_2"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_below="@+id/subtitle_match_2"
                android:background="@color/colorGrey"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/id_player_1_match_2"
                    android:text="Basel"
                    android:layout_weight="0.4"
                    android:textColor="@color/colorPrimary"
                    android:paddingTop="7sp"
                    android:paddingBottom="7sp"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/score_first_player_1_match_2"
                    android:text="0"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="7sp"
                    android:background="@color/colorGreyLight"
                    android:gravity="center"/>

                <View
                    android:layout_width="2sp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrey"/>

                <TextView
                    android:id="@+id/score_second_player_1_match_2"
                    android:text="2"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="7sp"
                    android:background="@color/colorGreyLight"
                    android:gravity="center"/>

                <View
                    android:layout_width="2sp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrey"/>

                <TextView
                    android:id="@+id/score_extra_player_1_match_2"
                    android:text="-"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="7sp"
                    android:background="@color/colorGreyLight"
                    android:gravity="center"/>

            </TableRow>

            <TableRow
                android:id="@+id/data_player_2_match_2"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginTop="5sp"
                android:layout_below="@+id/data_player_1_match_2"
                android:background="@color/colorGrey"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/id_player_2_match_2"
                    android:text="Manchester City"
                    android:layout_weight="0.4"
                    android:textColor="@color/colorPrimary"
                    android:paddingTop="7sp"
                    android:paddingBottom="7sp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/score_first_player_2_match_2"
                    android:text="4"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="7sp"
                    android:background="@color/colorGreyLight"
                    android:gravity="center"/>

                <View
                    android:layout_width="2sp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrey"/>

                <TextView
                    android:id="@+id/score_second_player_2_match_2"
                    android:text="1"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="7sp"
                    android:background="@color/colorGreyLight"
                    android:gravity="center"/>

                <View
                    android:layout_width="2sp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrey"/>

                <TextView
                    android:id="@+id/score_extra_player_2_match_2"
                    android:text="-"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="7sp"
                    android:background="@color/colorGreyLight"
                    android:gravity="center"/>

            </TableRow>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>