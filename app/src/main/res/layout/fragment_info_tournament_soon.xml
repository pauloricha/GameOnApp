<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:id="@+id/ll_tournament_soon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMaterialGray"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_awards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#75cacb">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:paddingBottom="20sp"
                    android:paddingTop="20sp"
                    android:paddingLeft="35sp"
                    android:paddingRight="35sp">

                    <RelativeLayout
                        android:id="@+id/rl_premiacoes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_premiacoes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PREMIAÇÕES"
                            android:textColor="#77a0aa"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view_premiacoes"
                            android:layout_width="30sp"
                            android:layout_height="2sp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="3sp"
                            android:layout_below="@+id/txt_premiacoes"
                            android:background="#77a0aa" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view_premiacoes"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/relativeLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/txt_title_first_place"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBaseline="@+id/txt_rs_first_place_award_tournament_soon"
                                    android:layout_alignBottom="@+id/txt_rs_first_place_award_tournament_soon"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:text="1º lugar"
                                    android:textSize="13sp"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txt_first_place_award_tournament_soon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="500,00"
                                    android:textColor="@color/colorPrimaryLight"
                                    android:textSize="28sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txt_rs_first_place_award_tournament_soon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBaseline="@+id/txt_first_place_award_tournament_soon"
                                    android:layout_alignBottom="@+id/txt_first_place_award_tournament_soon"
                                    android:layout_toLeftOf="@+id/txt_first_place_award_tournament_soon"
                                    android:layout_toStartOf="@+id/txt_first_place_award_tournament_soon"
                                    android:layout_marginRight="5sp"
                                    android:text="R$"
                                    android:textColor="@color/colorPrimaryLight"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relativeLayout2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0sp">

                                <TextView
                                    android:id="@+id/txt_title_second_place"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/txt_rs_second_place_award_tournament_soon"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:text="2º lugar"
                                    android:textSize="13sp"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txt_second_place_award_tournament_soon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="5sp"
                                    android:text="200,00"
                                    android:textColor="@color/colorPrimaryLight"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txt_rs_second_place_award_tournament_soon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBaseline="@+id/txt_second_place_award_tournament_soon"
                                    android:layout_alignBottom="@+id/txt_second_place_award_tournament_soon"
                                    android:layout_toLeftOf="@+id/txt_second_place_award_tournament_soon"
                                    android:layout_toStartOf="@+id/txt_second_place_award_tournament_soon"
                                    android:layout_marginRight="5sp"
                                    android:text="R$"
                                    android:textColor="@color/colorPrimaryLight"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relativeLayout3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0sp">

                                <TextView
                                    android:id="@+id/txt_title_third_place"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBaseline="@+id/txt_third_place_award_tournament_soon"
                                    android:layout_alignBottom="@+id/txt_third_place_award_tournament_soon"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:text="3º lugar"
                                    android:textColor="@color/colorGray"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txt_third_place_award_tournament_soon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="7sp"
                                    android:text="100,00"
                                    android:textColor="@color/colorPrimaryLight"
                                    android:textSize="23sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txt_rs_third_place_award_tournament_soon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBaseline="@+id/txt_third_place_award_tournament_soon"
                                    android:layout_alignBottom="@+id/txt_third_place_award_tournament_soon"
                                    android:layout_toLeftOf="@+id/txt_third_place_award_tournament_soon"
                                    android:layout_toStartOf="@+id/txt_third_place_award_tournament_soon"
                                    android:layout_marginRight="5sp"
                                    android:text="R$"
                                    android:textColor="@color/colorPrimaryLight"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:background="@color/colorGrayLight"
                android:layout_weight="0.30">

                <ImageView
                    android:id="@+id/img_price_tournament_soon"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_winners" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorGrayLight"
            android:layout_marginLeft="35sp" />

        <LinearLayout
            android:id="@+id/ll_players"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#75cacb">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20sp"
                    android:paddingTop="20sp"
                    android:paddingLeft="35sp"
                    android:paddingRight="35sp"
                    android:background="@color/colorWhite">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left">

                        <TextView
                            android:id="@+id/txt_participacao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_alignParentStart="true"
                            android:textStyle="bold"
                            android:textColor="#77a0aa"
                            android:text="PARTICIPANTES"
                            android:layout_alignParentLeft="true" />

                        <View
                            android:id="@+id/view_participantes"
                            android:layout_width="30sp"
                            android:layout_height="2sp"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="3sp"
                            android:layout_below="@+id/txt_participacao"
                            android:background="#77a0aa"
                            android:layout_alignParentLeft="true" />

                        <RelativeLayout
                            android:id="@+id/rl_num_participantes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/view_participantes">

                            <TextView
                                android:id="@+id/txt_number_players_tournament_soon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="16dp"
                                android:layout_marginStart="16dp"
                                android:text="12"
                                android:textColor="@color/colorGray"
                                android:textSize="26sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_space_number_players_tournament_soon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_toEndOf="@+id/txt_number_players_tournament_soon"
                                android:layout_toRightOf="@+id/txt_number_players_tournament_soon"
                                android:text="/"
                                android:layout_marginLeft="5sp"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary"
                                android:textSize="26sp" />

                            <TextView
                                android:id="@+id/txt_total_number_players_tournament_soon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0sp"
                                android:layout_toRightOf="@+id/txt_space_number_players_tournament_soon"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="26sp"
                                android:layout_marginStart="3sp"
                                android:text="32" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt_vaga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/rl_num_participantes"
                            android:layout_alignBottom="@+id/rl_num_participantes"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:text="inscrições"
                            android:textColor="@color/colorGray"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/txt_vaga"
                            android:layout_alignBottom="@+id/txt_vaga"
                            android:layout_toEndOf="@+id/txt_vaga"
                            android:layout_toRightOf="@+id/txt_vaga"
                            android:layout_marginLeft="5sp"
                            android:text="ABERTAS"
                            android:textColor="@color/colorPrimaryLight"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.30"
                android:background="@color/colorGrayLight">

                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="42dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_players" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorGrayLight"
            android:layout_marginLeft="35sp" />

        <LinearLayout
            android:id="@+id/ll_format"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#75cacb">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20sp"
                    android:paddingTop="20sp"
                    android:paddingLeft="35sp"
                    android:paddingRight="30sp"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_format"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FORMATO"
                            android:textColor="#77a0aa"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view_format"
                            android:layout_width="30sp"
                            android:layout_height="2sp"
                            android:layout_below="@+id/txt_format"
                            android:layout_marginTop="3sp"
                            android:background="#77a0aa" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view_format">

                            <TextView
                                android:id="@+id/txt_description_tournament_soon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="viewStart"
                                android:layout_marginTop="5sp"
                                android:paddingTop="5sp"
                                android:paddingBottom="5sp"
                                android:textColor="@color/colorGray"
                                android:text="Serão 32 participantes divididos em 8 Grupos de 4 jogadores, classificando-se 2 de cada grupo para a Fase de Mata-mata."
                                android:gravity="start" />

                            <LinearLayout
                                android:id="@+id/ll_format_groups"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:layout_below="@+id/txt_description_tournament_soon"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/img_opt1"
                                        android:layout_width="8sp"
                                        android:layout_height="8sp"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center_vertical"
                                        android:background="@mipmap/ic_topic" />

                                    <TextView
                                        android:id="@+id/txt_group"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="5sp"
                                        android:layout_toEndOf="@+id/img_opt1"
                                        android:layout_toRightOf="@+id/img_opt1"
                                        android:text="Fase de Grupos:"
                                        android:textAlignment="inherit"
                                        android:textColor="@color/colorGray"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_groups_tournament_soon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="inherit"
                                        android:layout_gravity="center_vertical"
                                        android:layout_toEndOf="@+id/txt_group"
                                        android:layout_toRightOf="@+id/txt_group"
                                        android:layout_marginLeft="5sp"
                                        android:layout_alignParentTop="true"
                                        android:textColor="@color/colorGray"
                                        android:text="Somente Ida" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_below="@+id/ll_format_groups"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:layout_marginBottom="5sp"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/img_opt2"
                                    android:layout_width="8sp"
                                    android:layout_height="8sp"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center_vertical"
                                    android:background="@mipmap/ic_topic" />

                                    <TextView
                                        android:id="@+id/txt_playoffs"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="5sp"
                                        android:layout_toEndOf="@+id/img_opt2"
                                        android:layout_toRightOf="@+id/img_opt2"
                                        android:text="Fase de Mata-mata:"
                                        android:textAlignment="inherit"
                                        android:textColor="@color/colorGray"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_playoffs_tournament_soon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="inherit"
                                        android:layout_marginLeft="5sp"
                                        android:layout_toEndOf="@+id/txt_playoffs"
                                        android:layout_toRightOf="@+id/txt_playoffs"
                                        android:textColor="@color/colorGray"
                                        android:layout_gravity="center_vertical"
                                        android:text="Ida e Volta" />

                                </RelativeLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.30"
                android:background="@color/colorGrayLight">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_format" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="35sp"
            android:background="@color/colorGrayLight" />

        <LinearLayout
            android:id="@+id/ll_subscription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#75cacb">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:paddingBottom="22sp"
                    android:paddingTop="20sp"
                    android:paddingLeft="35sp"
                    android:paddingRight="35sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite">

                        <TextView
                            android:id="@+id/txt_inscricao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INSCRIÇÃO"
                            android:textColor="#77a0aa"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view_inscricao"
                            android:layout_width="30sp"
                            android:layout_height="2sp"
                            android:layout_below="@+id/txt_inscricao"
                            android:layout_marginTop="3sp"
                            android:background="#77a0aa" />

                        <RelativeLayout
                            android:id="@+id/rl_num_inscricao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/view_inscricao"
                            android:layout_marginTop="5sp">

                            <TextView
                                android:id="@+id/txt_rs_price_tournament_soon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/txt_price_tournament_soon"
                                android:layout_alignBottom="@+id/txt_price_tournament_soon"
                                android:layout_alignParentLeft="true"
                                android:layout_marginRight="0sp"
                                android:text="R$"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txt_price_tournament_soon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:layout_toRightOf="@+id/txt_rs_price_tournament_soon"
                                android:text="35,00"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="26sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt_title_subs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/rl_num_inscricao"
                            android:layout_alignBottom="@+id/rl_num_inscricao"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:text="inscrição"
                            android:textColor="@color/colorGray"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_type_subscription_tournament_soon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/rl_num_inscricao"
                            android:layout_alignBottom="@+id/rl_num_inscricao"
                            android:layout_toEndOf="@+id/txt_title_subs"
                            android:layout_toRightOf="@+id/txt_title_subs"
                            android:layout_marginLeft="5sp"
                            android:text="ÚNICA"
                            android:textColor="@color/colorPrimaryLight"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/btn_register_2"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:text="Participar"
                        android:layout_marginTop="21sp"
                        android:layout_marginBottom="5sp"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="bottom|right"
                        android:background="@drawable/button_shape" />

                </LinearLayout>




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.30"
                android:background="@color/colorGrayLight">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_ticket" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</ScrollView>
