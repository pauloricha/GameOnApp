<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:customviews="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:id="@+id/ll_statics_my_profile">

    <LinearLayout
        android:id="@+id/ll_num_statics_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <RelativeLayout
            android:id="@+id/rl_win_my_profile"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.35">

            <ImageView
                android:id="@+id/img_win_my_profile"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_win"/>

            <TextView
                android:id="@+id/txt_win_my_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_win_my_profile"
                android:layout_marginTop="10dp"
                android:textSize="11sp"
                android:text="VITÃ“RIAS" />

            <TextView
                android:id="@+id/txt_num_win_my_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_win_my_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:textSize="25dp"
                android:text="0" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_draw_my_profile"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.35">

            <ImageView
                android:id="@+id/img_draw"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_draw"/>

            <TextView
                android:id="@+id/txt_draw_my_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_draw"
                android:layout_marginTop="10dp"
                android:textSize="11sp"
                android:text="EMPATES"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/txt_num_draw_my_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_draw_my_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:textSize="25dp"
                android:text="0" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_loss_my_profile"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.35">

            <ImageView
                android:id="@+id/img_loss_my_profile"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_loss"/>

            <TextView
                android:id="@+id/txt_loss_my_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_loss_my_profile"
                android:layout_marginTop="10sp"
                android:textSize="11sp"
                android:text="DERROTAS"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/txt_num_loss_my_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_loss_my_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:textSize="25dp"
                android:text="0" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_graphic_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_donut_my_profile"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/ll_donut_my_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <TextView
                android:id="@+id/txt_num_donut_my_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="0"
                android:textSize="40sp" />
        </RelativeLayout>

        <!--<SeekBar
            android:id="@+id/control_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:max="100"
            android:progress="0" />-->
    </LinearLayout>
</LinearLayout>
