<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/ll_content_register">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_close_register"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@mipmap/ic_close" />

                <TextView
                    android:id="@+id/txt_title_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="@string/txt_title_register" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_title_name_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGrey"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:text="@string/txt_title_name_register" />

                    <EditText
                        android:id="@+id/edt_name_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:inputType="textCapWords"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_title_email_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:text="@string/txt_title_email_register" />

                    <EditText
                        android:id="@+id/edt_email_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:inputType="textEmailAddress"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txt_title_countrys_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:textColor="@color/colorGrey"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:text="@string/txt_title_countrys_register" />

                        <Spinner
                            android:id="@+id/spinner_countrys_register"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_title_countrys_register"
                            android:layout_marginBottom="5sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginTop="0sp"
                            android:layout_marginEnd="10sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_title_states_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:textColor="@color/colorGrey"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:text="@string/txt_title_states_register" />

                        <Spinner
                            android:id="@+id/spinner_states_register"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_title_states_register"
                            android:layout_marginBottom="5sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginTop="0sp"
                            android:layout_marginEnd="10sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_title_platform_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGrey"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:text="@string/txt_title_platform_register" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_psn_register"
                            android:layout_width="43sp"
                            android:layout_height="43sp"
                            android:src="@drawable/ic_psn_off" />

                        <ImageView
                            android:id="@+id/img_live_register"
                            android:layout_width="35sp"
                            android:layout_height="35sp"
                            android:layout_marginLeft="25sp"
                            android:layout_marginTop="4sp"
                            android:layout_marginStart="25dp"
                            android:src="@drawable/ic_live_off" />

                        <ImageView
                            android:id="@+id/img_steam_register"
                            android:layout_width="38sp"
                            android:layout_height="38sp"
                            android:layout_marginLeft="25sp"
                            android:layout_marginTop="3sp"
                            android:layout_marginStart="25sp"
                            android:src="@drawable/ic_steam_off" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_title_game_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGrey"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:text="@string/txt_title_game_register" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_pes_register"
                            android:layout_width="90sp"
                            android:layout_height="30sp"
                            android:layout_marginTop="1sp"
                            android:src="@drawable/ic_pes_off" />

                        <ImageView
                            android:id="@+id/img_fifa_register"
                            android:layout_width="60sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="30sp"
                            android:layout_marginStart="30sp"
                            android:src="@drawable/ic_fifa_off" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_title_id_profile_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:text="@string/txt_title_id_profile_register" />

                    <EditText
                        android:id="@+id/edt_id_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:inputType="textCapCharacters"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_psn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_title_psn_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/colorGrey"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/txt_title_psn_register" />

                    <EditText
                        android:id="@+id/edt_psn_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:inputType="textCapWords"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_live_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_title_live_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/colorGrey"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/txt_title_live_register" />

                    <EditText
                        android:id="@+id/edt_live_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:inputType="textCapWords"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_steam_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_title_steam_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/colorGrey"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/txt_title_steam_register" />

                    <EditText
                        android:id="@+id/edt_steam_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:inputType="textCapWords"
                        android:text="" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_title_password_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/colorGrey"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="@string/txt_title_password_register" />

                <EditText
                    android:id="@+id/edt_password_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="" />

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginTop="25sp"
                    android:layout_marginBottom="10sp"
                    android:background="@color/colorPrimary"
                    android:textColor="#FFFFFF"
                    android:text="@string/btn_register" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>