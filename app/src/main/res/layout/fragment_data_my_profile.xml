<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:customviews="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorWhite" >

    <LinearLayout
        android:id="@+id/ll_data_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title_my_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERFIL"
            android:textColor="@color/colorGray"
            android:textSize="11sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_name_my_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_name_my_profile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_profile" />

            <TextView
                android:id="@+id/txt_name_my_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10sp"
                android:text=""
                android:textColor="#000000"
                android:textSize="14sp" />

            <!--<Button
                android:id="@+id/icon_edit_nome_perfil"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_edit" />-->


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_email_my_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_email_my_profile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:src="@mipmap/ic_email" />

            <TextView
                android:id="@+id/txt_email_my_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10sp"
                android:text=""
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_title_setup_my_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:text="SETUP"
            android:textColor="@color/colorGray"
            android:textSize="11sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_platform_my_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_platform_my_profile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_console" />

            <TextView
                android:id="@+id/txt_platform_my_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10sp"
                android:text=""
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_id_my_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_id_my_profile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:src="@mipmap/ic_id" />

            <TextView
                android:id="@+id/txt_id_my_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10sp"
                android:text=""
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_psn_my_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ic_psn_my_profile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_psn" />

            <TextView
                android:id="@+id/txt_psn_my_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10sp"
                android:text=""
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
