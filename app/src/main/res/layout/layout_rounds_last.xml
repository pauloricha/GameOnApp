<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:id="@+id/rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0sp">

        <RelativeLayout
            android:id="@+id/top_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0sp"
            android:layout_marginRight="5sp"
            android:layout_marginLeft="5sp"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/txt_title_gp"
                android:layout_toStartOf="@+id/txt_title_gp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:src="@mipmap/ic_back_rounds"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_title_gp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Rodada 1"
                android:padding="9sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txt_title_gp"
                android:layout_toEndOf="@+id/txt_title_gp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:src="@mipmap/ic_next_rounds"
                    android:visibility="invisible"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_below="@+id/top_round">

            <RelativeLayout
                android:id="@+id/round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:id="@+id/match_1"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:background="@color/colorGray"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/id_home_match_1"
                        android:text="gameondigital"
                        android:layout_weight="0.7"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="7sp"
                        android:paddingBottom="7sp"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/score_home_match_1"
                        android:text="5"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingTop="7sp"
                        android:paddingBottom="7sp"
                        android:background="@color/colorGrayLight"
                        android:gravity="center"/>

                    <View
                        android:layout_width="2sp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGray"/>

                    <TextView
                        android:id="@+id/score_outside_match_1"
                        android:text="0"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingTop="7sp"
                        android:paddingBottom="7sp"
                        android:background="@color/colorGrayLight"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/id_outside_match_1"
                        android:text="livialima12"
                        android:layout_weight="0.7"
                        android:paddingTop="7sp"
                        android:paddingBottom="7sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:gravity="center"/>

                </TableRow>
                <!-- Linha 2 com 2 colunas -->
                <TableRow
                    android:id="@+id/match_2"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_below="@id/match_1"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="@color/colorGray"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/id_home_match_2"
                        android:text="bulosricha"
                        android:layout_weight="0.7"
                        android:paddingTop="7sp"
                        android:paddingBottom="7sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/score_home_match_2"
                        android:text="2"
                        android:layout_weight="1"
                        android:paddingTop="7sp"
                        android:paddingBottom="7sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:background="@color/colorGrayLight"
                        android:gravity="center"/>

                    <View
                        android:layout_width="2sp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGray"/>

                    <TextView
                        android:id="@+id/score_outside_match_2"
                        android:text="3"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="7sp"
                        android:paddingBottom="7sp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:background="@color/colorGrayLight"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/id_outside_match_2"
                        android:text="leonicemr"
                        android:layout_weight="0.7"
                        android:paddingTop="7sp"
                        android:paddingBottom="7sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:gravity="center"/>

                </TableRow>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
